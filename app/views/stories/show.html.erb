<section class="story">
	<%= render 'entry', :story => @story%>
</section>

<section class="comments">
	<h3>Comments</h3>

	<p><%= link_to 'Add a Comment', new_story_comment_path(@story) %></p>

	<%= form_for [@story, @comment] do |f| %>
		<%= f.text_area :body %>
		<%= f.submit "Comment!" %>
	<% end -%>
	<ol>
		<%= render (@story.comments) || "There are no comments." %>
	</ol>
</section>